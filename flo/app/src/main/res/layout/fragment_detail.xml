<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_album_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detail_album_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앨범명"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                     <TextView
                         android:id="@+id/detail_album_name_tv2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="IU 5th Album 'LILAC'"
                         android:textSize="12sp"
                         android:textColor="@color/gray_color"
                         android:layout_marginStart="20dp"
                         app:layout_constraintStart_toEndOf="@+id/detail_album_name_tv1"
                         app:layout_constraintTop_toTopOf="@+id/detail_album_name_tv1"/>

                    <TextView
                        android:id="@+id/detail_album_artist_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아티스트"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_name_tv1"
                        app:layout_constraintStart_toStartOf="@id/detail_album_name_tv1"/>

                    <TextView
                        android:id="@+id/detail_album_artist_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU)"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_color"
                        app:layout_constraintStart_toStartOf="@+id/detail_album_name_tv2"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_name_tv2"/>

                    <TextView
                        android:id="@+id/detail_album_distributor_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유통사"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_artist_tv1"
                        app:layout_constraintStart_toStartOf="@id/detail_album_artist_tv1"/>

                    <TextView
                        android:id="@+id/detail_album_distributor_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카카오엔터테인먼트"
                        android:textSize="12sp"
                        android:textColor="@color/gray_color"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@+id/detail_album_artist_tv2"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_artist_tv2"/>

                    <TextView
                        android:id="@+id/detail_album_agency_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기획사"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_distributor_tv1"
                        app:layout_constraintStart_toStartOf="@id/detail_album_distributor_tv1"/>

                    <TextView
                        android:id="@+id/detail_album_agency_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDAM 엔터테인먼트"
                        android:textSize="12sp"
                        android:textColor="@color/gray_color"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@+id/detail_album_distributor_tv2"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_distributor_tv2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_album_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/detail_album_intro_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앨범소개"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="'아이유(IU)' 정규 5집 [LILAC]\n\n'안녕 꽃잎 같은 안녕'\n''내 맘에 아무 의문이 없어 난 이 다음으로 가요\n20대의 마지막에 대해 화려한 '인사'를 예고했던 아이유가 봄~"
                        android:textSize="12sp"
                        android:textColor="@color/gray_color"
                        app:layout_constraintStart_toStartOf="@id/detail_album_intro_tv1"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_intro_tv1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>